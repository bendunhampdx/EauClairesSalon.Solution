@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="jumbotron">
  <h3>Clients for @ViewBag.Stylist.Name</h3>
</div>

@if (Model.Count == 0)
{
  <p>No clients for this stylist have been added.</p>
}

<ul>
  @foreach (Client client in Model)
  {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
  }
</ul>

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("See all stylist options", "Index", "Stylists")</p>
<p>@Html.ActionLink("See all Clients", "Index", "Clients")</p>